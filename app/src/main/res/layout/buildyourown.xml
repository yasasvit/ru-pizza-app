<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:translationX="5dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="@string/build_your_own_pizza1"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationX="40dp"
        android:translationY="40dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:src="@drawable/custom_pizza"
        android:translationX="200dp"
        android:translationY="50dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:text="@string/pizza_size"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationX="5dp"
        android:translationY="-250dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="149dp"
        android:layout_height="55dp"
        android:translationX="5dp"
        android:translationY="-250dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:text="@string/sauce_options"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:translationX="5dp"
        android:translationY="-250dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:text="@string/tomato_sauce"
        android:translationX="5dp"
        android:translationY="-250dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:text="@string/alfredo_sauce"
        android:translationX="5dp"
        android:translationY="-250dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/additional_options"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textStyle="bold"
        android:translationX="5dp"
        android:translationY="-250dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:text="@string/extra_cheese"
        android:translationX="5dp"
        android:translationY="-250dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:text="@string/extra_sauce"
        android:translationX="5dp"
        android:translationY="-250dp" />

    <ListView
        android:layout_width="180dp"
        android:layout_height="188dp"
        android:translationX="200dp"
        android:translationY="-220dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="162dp"
        android:layout_height="48dp"
        android:text="@string/remove_topping"
        android:translationX="220dp"
        android:translationY="-185dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:text="@string/place_order1"
        android:translationX="70dp"
        android:translationY="-160dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="162dp"
        android:layout_height="55dp"
        android:text="@string/add_topping"
        android:translationX="5dp"
        android:translationY="-280dp" />

    <ListView
        android:layout_width="176dp"
        android:layout_height="190dp"
        android:translationX="5dp"
        android:translationY="-550dp" />


</LinearLayout>

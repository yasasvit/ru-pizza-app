<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">


    <ImageView
        android:id="@id/imageView"
        android:layout_width="189dp"
        android:layout_height="128dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/specialty_pizzas"
        android:translationX="100dp"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/specialtyPizzasButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Specialty Pizzas"
        android:translationX="50dp" />

    <ImageView
        android:id="@id/imageView"
        android:layout_width="196dp"
        android:layout_height="123dp"
        android:src="@drawable/custom_pizza"
        android:translationX="100dp" />

    <Button
        android:id="@+id/byoButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Build Your Own Pizza"
        android:translationX="50dp" />

    <ImageView
        android:id="@id/imageView"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:src="@drawable/shopping_cart"
        android:translationX="100dp" />

    <Button
        android:id="@+id/currentOrderButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Current Orders"
        android:translationX="50dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="193dp"
        android:layout_height="128dp"
        android:src="@drawable/store_orders"
        android:translationX="100dp" />

    <Button
        android:id="@+id/storeOrdersButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Store Orders"
        android:translationX="50dp" />
</LinearLayout>
